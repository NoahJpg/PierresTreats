@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
@using System.Collections.Generic;
@model List<PierresTreats.Models.Flavor>;

<br>
<h4>Search Results</h4>
@if (Model.Count == 0)
{
  <p> No flavors match this search </p>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("- Back to Flavor List -", "Index")</p>