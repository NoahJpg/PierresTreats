@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
@using System.Collections.Generic;
@model List<PierresTreats.Models.Treat>;

<br>
<h4>Search Results</h4>
@if (Model.Count == 0)
{
  <p> No treats match this search </p>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("- Back to Treat List -", "Index")</p>